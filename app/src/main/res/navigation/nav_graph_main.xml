<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_home.xml"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.quotesapp.presentation.fragment.SplashScreenFragment"
        android:label="SplashScreenFragment" >
        <action
            android:id="@+id/action_splashScreenFragment_to_launchScreenFragment"
            app:destination="@id/launchScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/launchScreenFragment"
        android:name="com.example.quotesapp.presentation.fragment.LaunchScreenFragment"
        android:label="LaunchScreenFragment" >
        <action
            android:id="@+id/action_launchScreenFragment_to_languageChooserBottomSheetFragment"
            app:destination="@id/languageChooserBottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.quotesapp.presentation.fragment.ProfileFragment"
        android:label="ProfileFragment" />
    <dialog
        android:id="@+id/languageChooserBottomSheetFragment"
        android:name="com.example.quotesapp.presentation.bottomSheet.LanguageChooserBottomSheetFragment"
        android:label="LanguageChooserBottomSheetFragment" >
        <action
            android:id="@+id/action_languageChooserBottomSheetFragment_to_loginBottomSheetFragment"
            app:destination="@id/loginBottomSheetFragment" />
        <action
            android:id="@+id/action_languageChooserBottomSheetFragment_to_signUpBottomSheetFragment"
            app:destination="@id/signUpBottomSheetFragment" />
    </dialog>
    <dialog
        android:id="@+id/loginBottomSheetFragment"
        android:name="com.example.quotesapp.presentation.bottomSheet.LoginBottomSheetFragment"
        android:label="LoginBottomSheetFragment" >
        <action
            android:id="@+id/action_loginBottomSheetFragment_to_signUpBottomSheetFragment"
            app:destination="@id/signUpBottomSheetFragment" />
        <action
            android:id="@+id/action_loginBottomSheetFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </dialog>
    <dialog
        android:id="@+id/signUpBottomSheetFragment"
        android:name="com.example.quotesapp.presentation.bottomSheet.SignUpBottomSheetFragment"
        android:label="SignUpBottomSheetFragment" >
        <action
            android:id="@+id/action_signUpBottomSheetFragment_to_loginBottomSheetFragment"
            app:destination="@id/loginBottomSheetFragment" />
    </dialog>
</navigation>